{
    "compileOnSave": false,
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2019",
      "typeRoots": [
        "node_modules/@types",
        "./src/typings.d.ts" // typings for plain json files
      ],
      "lib": [
        "esnext",
        "es2019",
        "es2017",
        "es2016",
        "es2015",
        "dom"
      ]
    },
    "files": [
      "main.ts",
    ],
    "include": [
      "src/**/*.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  